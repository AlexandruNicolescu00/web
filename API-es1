swagger: "2.0"
info:
  description: "API Ristorante"
  version: "0.0.1"
  title: "API Ristorante"

host: "petstore.swagger.io"
basePath: "/v1"
paths:
  /menu/:
    # Elenco menu
    get:
      responses:
        200:
          description: "OK"
          schema:
            type: array
            items:
              $ref: "#/definitions/Menu"
        400:
          description: "Error"
          
  /menu/{idMenu}:
    # Info menu
    get:
      parameters:
        - name: idMenu
          in: path
          description: ID of Menu to return
          required: true
          type: integer
          format: int64
      responses:
        200:
          description: "OK"
          schema:
            $ref: "#/definitions/Menu"
        400:
          description: "Error"
  /menu/{idMenu}/piatti/:
    # Elenco piatti in un menù
    get:
      parameters:
        - name: idMenu
          in: path
          description: ID of Menu to return
          required: true
          type: integer
          format: int64
      responses:
        200:
          description: "OK"
          schema:
            type: array
            items:
              $ref: "#/definitions/Piatto"
        400:
          description: "Error"
    # Aggiungi piatto a un menu
    post:
      parameters:
        - name: idMenu
          in: path
          description: ID of Menu to return
          required: true
          type: integer
          format: int64
        - name: nuovoPiatto
          in: body
          description: Piatto da aggiungere nel menu
          schema:
            $ref: "#/definitions/Piatto"
          required: true
      responses:
        200:
          description: "OK"
          schema:
            type: array
            items:
              $ref: "#/definitions/Piatto"
        400:
          description: "Error"  
    # Cancellazione piatti in un menù
    delete:
      parameters:
        - name: idMenu
          in: path
          description: ID of Menu to return
          required: true
          type: integer
          format: int64
      responses:
        200:
          description: "OK"
        400:
          description: "Error"
  
  
schemes:
- "https"
- "http"

definitions:
# definito dall'utente
  Menu:
    type: object
    required:
      - id
      - title
    properties:
      id:
        type: integer
        format: int64
      title:
        type: string
  Piatto:
    type: object
    required:
      - id
      - name
    properties:
      id:
        type: integer
        format: int64
      name:
        type: string
    